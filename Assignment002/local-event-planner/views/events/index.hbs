<h2>Your Events</h2>
<ul>
  {{#each events}}
    <li>{{this.title}} - {{this.date}} at {{this.location}}
      <a href="/events/edit/{{this._id}}">Edit</a>
      <form action="/events/delete/{{this._id}}" method="POST">
        <button type="submit">Delete</button>
      </form>
    </li>
  {{/each}}
</ul>
<a href="/events/add">Add New Event</a>