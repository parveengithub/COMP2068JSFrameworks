<h2>Events</h2>
<ul>
  {{#each events}}
  <li>{{this.name}} - {{this.date}}</li>
  {{/each}}
</ul>
<form action="/events/delete/{{this._id}}" method="post" onsubmit="return confirm('Are you sure you want to delete this event?');">
  <button type="submit">Delete</button>
</form>

<form action="/events/search" method="get">
  <input type="text" name="q" placeholder="Search events...">
  <button type="submit">Search</button>
</form>
